%h1 Which committees and groups?

#search_form
  = form_tag search_index_path, :method => :get do
    %p
      %strong Name:
      = text_field_tag :q, params[:q], :id => 'search_box'
      = submit_tag "Search", :id => 'search'

- if @members.size > 0
  #results
    - @members.each do |member|
      .member
        %h2= member.name
        %h3 Committees
        - if member.committees.size > 0
          %ul
            - member.committees.each do |organization|
              %li= organization.name
        - else
          %p None
        %h3 Groups
        - if member.groups.size > 0
          %ul
            - member.groups.each do |organization|
              %li= organization.name
        - else
          %p None
        %hr
